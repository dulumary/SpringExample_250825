<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.marondal.springexample.mvc.repository.UserRepository">

    <insert id="insertUser" parameterType="map">
        INSERT INTO
            `new_user`
        (
            `name`
            , `yyyymmdd`
            , `email`
            , `introduce`
        )
        VALUE
        (
            #{name}
            , #{birthday}
            , #{email}
            , #{introduce}
        )
    </insert>

    <insert id="insertUserByObject"
    parameterType="com.marondal.springexample.mvc.domain.User"
    useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            `new_user`
        (
              `name`
            , `yyyymmdd`
            , `email`
            , `introduce`
        )
        VALUE
        (
            #{name}
            , #{yyyymmdd}
            , #{email}
            , #{introduce}
        )
    </insert>

    <select id="selectLastUser"
    resultType="com.marondal.springexample.mvc.domain.User">
        SELECT
            `id`
            , `name`
            , `yyyymmdd`
            , `email`
            , `introduce`
            , `created_at`
            , `updated_at`
        FROM
            `new_user`
        ORDER BY
            `id` DESC
        LIMIT 1
    </select>

    <select id="selectCountByEmail" parameterType="string"
    resultType="int">
        SELECT
            COUNT(*)
        FROM
            `new_user`
        WHERE
            `email` = #{email}
    </select>

</mapper>